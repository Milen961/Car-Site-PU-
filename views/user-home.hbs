<h1 class="text-center">Cars</h1>
<section>
    <a href="/car/create" class="btn btn-warning ">Create Car</a>
    <form class="search float-right">
        <label>Search: </label>
        <input type="text" name="search" value="{{search}}">
        <input type="submit" class="btn btn-primary" value="Search">
    </form>
</section>
{{#if cars}}
<div class="container mt-3">
    <div class="row ">
        <div class="card-deck d-flex justify-content-center">
        {{#each cars }}
        {{> car username=../username}}
        {{/each}}
        </div>
    </div>
</div>
{{else}}
<h3 class="text-center">No Cars...</h3>
{{/if}}